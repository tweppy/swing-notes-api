{
  "info": {
    "description": "Create and save notes to user account",
    "title": "Swing Notes API",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "components": {
    "securitySchemas": {
      "bearerAuth": {
        "type": "http",
        "name": "Authorization",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Note": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "text": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          },
          "modifiedAt": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "userID": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/api/user/signup": {
      "post": {
        "summary": "User creates an account",
        "description": "User signs up with username and password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid body input"
        },
        "409": {
          "description": "Username already exists"
        }
      }
    },
    "/api/user/login": {
      "post": {
        "summary": "User logs in",
        "description": "User logs in with username and password and recieves token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid body input"
        },
        "401": {
          "description": "Incorrect password"
        },
        "404": {
          "description": "Username not found"
        }
      }
    },
    "/api/user/account": {
      "get": {
        "summary": "User verification with token",
        "description": "User verification with token in header",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "user": {
                      "type": "string"
                    },
                    "userID": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Invalid header input credentials"
        },
        "498": {
          "description": "Invalid token"
        }
      }
    }
  },
  "/api/notes": {
    "get": {
      "summary": "Get a user's notes",
      "description": "Get a user's notes",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "notes": {
                    "type": "array",
                    "notes": {
                      "$ref": "#/components/schemas/notes"
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Invalid header input"
        },
        "498": {
          "description": "Invalid token"
        }
      }
    },
    "post": {
      "summary": "Add a new note",
      "description": "Adds a new note to a user's saved notes",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "userID": {
                    "type": "string"
                  },
                  "note": {
                    "title": {
                      "type": "string"
                    },
                    "text": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid body input or invalid character length of title and/or text input"
        },
        "401": {
          "description": "Invalid header input credentials"
        },
        "409": {
          "description": "Note with title already"
        },
        "498": {
          "description": "Invalid token"
        }
      }
    },
    "put": {
      "summary": "Edit a note",
      "description": "Edits a user's existing note's title and/or description",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid body input or invalid character length of title and/or text input"
        },
        "401": {
          "description": "Invalid header input credentials"
        },
        "404": {
          "description": "Invalid note ID"
        },
        "498": {
          "description": "Invalid token"
        }
      }
    },
    "delete": {
      "summary": "Delete a new note",
      "description": "Deletes a user's saved note",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid body input"
        },
        "401": {
          "description": "Invalid header input credentials"
        },
        "404": {
          "description": "Invalid note ID"
        },
        "498": {
          "description": "Invalid token"
        }
      }
    }
  },
  "/api/notes/search": {
    "get": {
      "summary": "Search for a note by title",
      "description": "Searches through a user's notes by title and returns note if successful",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "note": {
                    "type": "object",
                    "note": {
                      "$ref": "#/components/schemas/notes"
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Invalid body input"
        },
        "401": {
          "description": "Invalid header input"
        },
        "404": {
          "description": "No match found"
        },
        "498": {
          "description": "Invalid token"
        }
      }
    }
  }
}
